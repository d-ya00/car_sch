<p id="notice"><%= notice %></p>
<div class="schedules">
  <h3>一日のスケジュール</h3>
  <% @blogs.each do |blog| %>
    <p>
      <strong>タイトル</strong>
      <%= blog.title %>
    </p>
    <p>
      <strong>内容</strong>
      <%= blog.content %>
    </p>
    <p>
      <strong>日時</strong>
      <%= blog.start_time.strftime("%m-%d %H:%M") %>
    </p>
    <%= link_to '編集', edit_blog_path(blog) %>
    <%= link_to '消去', blog_path(blog), data: { turbo_method: :delete } %>
  <% end %>
  <%= link_to '戻る', blogs_path %>
</div>
